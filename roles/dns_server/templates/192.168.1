$TTL 60  ; 1 minute
@		IN SOA	dns.{{ dns_domain }}. hostmaster.{{ dns_domain }}. (
				2012113000 ; serial
				60         ; refresh (1 minute)
				15         ; retry (15 seconds)
				1800       ; expire (30 minutes)
				10         ; minimum (10 seconds)
				)
			NS	dns.{{ dns_domain }}.

{% for host in play_hosts %}
{{ hostvars[host].openshift.common.ip|replace("{{ subnet }}.", "") }} IN PTR    {{ hostvars[host].openshift.common.hostname }}.
{% endfor %}

